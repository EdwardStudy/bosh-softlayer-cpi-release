#!/bin/bash

(
  set -e

  base=$( cd "$( dirname "$( dirname "$0" )")" && pwd )
  base_gopath=$( cd $base/../../../.. && pwd )

  export GOPATH=$PWD/gopath:$base/Godeps/_workspace:$base_gopath GOBIN=$base_gopath/gobin
  export PATH=$PATH:$GOBIN

  function printStatus {
      if [ $? -eq 0 ]; then
          echo -e "\nSWEET SUITE SUCCESS"
      else
          echo -e "\nSUITE FAILURE"
      fi
  }

  trap printStatus EXIT

  echo -e "\n Cleaning build artifacts..."
  go clean

  echo -e "\n Formatting packages..."
  go fmt ./...

  echo -e "\n Get ginkgo..."
  # go get github.com/onsi/ginkgo
  # go install -installsuffix $base/concourse github.com/onsi/ginkgo/ginkgo
  go install github.com/onsi/ginkgo/ginkgo

  echo -e "\n Creating cpi binary..."
  go build -o $base/out/cpi github.com/maximilien/bosh-softlayer-cpi/main

  echo -e "\n Integration Testing packages:"
  # go test ./integration/...
  ginkgo -r -p -v --noisyPendings $base/integration

  echo -e "\n Vetting packages for potential issues..."
  go tool vet $base/services $base/data_types $base/main $base/client $base/common $base/test_helpers $base/integration
)
