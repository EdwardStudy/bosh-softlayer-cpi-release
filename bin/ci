#!/bin/bash

(
  set -e

  base=$( cd "$( dirname "$( dirname "$0" )")" && pwd )
  base_gopath=$( cd $base/../../../.. && pwd )
 
  # export GOPATH=$base:$base/Godeps/_workspace:$base_gopath GOBIN=$base_gopath/gobin
  # export PATH=$PATH:$GOBIN
  export GOPATH=$base/Godeps/_workspace

  function printStatus {
      if [ $? -eq 0 ]; then
          echo -e "\nSWEET SUITE SUCCESS"
      else
          echo -e "\nSUITE FAILURE"
      fi
  }

  trap printStatus EXIT

  echo -e "\n Cleaning build artifacts..."
  go clean

  echo -e "\n Formatting packages..."
  go fmt ./...

  echo -e "\n Install ginkgo..."
  go install github.com/onsi/ginkgo/ginkgo

  echo -e "\n Unit Testing packages:"
  ginkgo $GOPATH/action $GOPATH/api/... $GOPATH/softlayer $GOPATH/util

  echo -e "\n Vetting packages for potential issues..."
  go tool vet $base/action $base/api $base/main $base/softlayer $base/util
)
